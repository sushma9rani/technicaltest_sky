{% extends 'base.html.twig' %}

{% block title %}Hello MetricController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h2>Metrics Data from database</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Timestamp</th>
            <th>CPU Load</th>
            <th>Concurrency</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.timestamp|date("d-m-Y H:i:s") }}</td>
                <td>{{ entity.cpu_load }}</td>
                <td>{{ entity.concurrency }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
